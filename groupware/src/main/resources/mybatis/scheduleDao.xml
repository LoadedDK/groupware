<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="dao.Schedule">

<!-- 	일정관리 리스트 -->
	<select id="list" resultType="com.dk.groupware.schedule.model.Schedule">
		select no, title, to_char(sdate,'yyyy-mm-dd') sdate from schedule order by no desc
	</select>
<!-- 	일정관리의 총갯수 -->
	<select id="selectCount" resultType="Integer">
		select count(no) from schedule
<!-- 		<if test="searchWord!=null"> -->
<!-- 			where #{searchKey} like '%#{searchWord}%' -->
<!-- 		</if> -->
	</select>
<!-- 	일정보기 -->
	<select id="view"
	 resultType="com.dk.groupware.schedule.model.Schedule">
		select no, title, content, to_char(sdate,'yyyy-mm-dd') sdate, time from schedule
		where no=#{no}
	</select>
<!-- 	일정등록 -->
	<insert id="write">
		insert into schedule(no,title,content,sdate,time,writer)
  		values(board_seq.nextval,#{title},#{content},#{sdate},#{time},#{writer})
	</insert>
<!-- 	일정수정 -->
  <update id="update">
  	update schedule set title=#{title},content=#{content},sdate=#{sdate},
  	time=#{time}, writer=#{writer} where no=#{no}
  </update>
<!--   일정삭제 -->
  <delete id="delete">
  	delete from schedule where no=#{no}
  </delete>
</mapper>